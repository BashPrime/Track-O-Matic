<ContentControl x:Class="DK64PointsTracker.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DK64PointsTracker"
             mc:Ignorable="d" Background="Transparent" PreviewGiveFeedback="Item_PreviewGiveFeedback" MouseMove="Item_MouseMove"
             MouseDown="Item_MouseDown">

    <ContentControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentControl.Resources>
    
    <ContentControl.Content>
        <Grid>
            <ContentPresenter x:Name ="ImageItem" Content="{Binding ItemImage}"/>
            <ContentPresenter x:Name="Checkmark" Content="{StaticResource checkmark}" Visibility="Hidden"/>
            <ContentPresenter x:Name="X" Content="{StaticResource x}" Visibility="Hidden"/>
        </Grid>
    </ContentControl.Content>

</ContentControl>