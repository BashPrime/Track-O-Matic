<Window x:Class="TrackOMatic.BasicItemSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:TrackOMatic.Properties"
             xmlns:local="clr-namespace:TrackOMatic"
             mc:Ignorable="d" 
             Height="120" Width="250" Topmost ="{Binding Source={x:Static properties:Settings.Default}, Path=TopMost}"
    Title="Select Item"
        ResizeMode="NoResize"
        Background="{StaticResource RegionBG}">
    <Grid Name="ItemGrid" Visibility="Visible"  Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition x:Name="Row2" Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
