                <local:ToggleableItem Grid.Column="1" OnImageSource="Images\dk64\troffnscoff_done.png" OffImageSource="Images\dk64\troffnscoff.png"/>
                <local:ToggleableItem Grid.Column="2" OnImageSource="Images\dk64\troffnscoff_done.png" OffImageSource="Images\dk64\troffnscoff.png"/>
                <local:ToggleableItem Grid.Column="3" OnImageSource="Images\dk64\troffnscoff_done.png" OffImageSource="Images\dk64\troffnscoff.png"/>
                <local:ToggleableItem Grid.Column="4" OnImageSource="Images\dk64\troffnscoff_done.png" OffImageSource="Images\dk64\troffnscoff.png"/>
                <local:ToggleableItem Grid.Column="5" OnImageSource="Images\dk64\troffnscoff_done.png" OffImageSource="Images\dk64\troffnscoff.png"/>
                <local:ToggleableItem Grid.Column="6" OnImageSource="Images\dk64\troffnscoff_done.png" OffImageSource="Images\dk64\troffnscoff.png"/>
                <local:ToggleableItem Grid.Column="7" OnImageSource="Images\dk64\troffnscoff_done.png" OffImageSource="Images\dk64\troffnscoff.png"/>-->
                <local:CollectibleItem x:Name="Pearls" ImageSource="Images\dk64\pearl.png" Opacity="0.25" Text="0" Grid.Column="1"/>
                <local:CollectibleItem x:Name="BattleCrowns" ImageSource="Images\dk64\crown.png" Opacity="0.25" Text="0" Grid.Column="3"/>
                <local:CollectibleItem x:Name="BananaMedals" ImageSource="Images\dk64\bananamedal.png" Opacity="0.25" Text="0" Grid.Column="5"/>
                <local:CollectibleItem x:Name="RainbowCoins" ImageSource="Images\dk64\rainbowcoin.png" Opacity="0.25" Text="0" Grid.Column="7"/>
                <local:CollectibleItem x:Name="Fairies" ImageSource="Images\dk64\fairy.png" Opacity="0.25" Text="0" Grid.Column="9"/>
                <local:CollectibleItem x:Name="GBs" ImageSource="Images\dk64\GB.png" Opacity="0.25" Text="0" Grid.Column="11"/>
            </Grid>
            <!-- Items -->
            <Grid Name="ItemGrid" Grid.Row="4" Visibility="Visible"  Margin="0" >
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- Kong 1 -->
                <local:Item x:Name="dk" ItemImage="{DynamicResource donkey}" Grid.Row="0" Grid.Column="0" Panel.ZIndex="0" Tag="{x:Static local:ItemName.DONKEY}"/>
                <local:Item x:Name="dk_gun"  ItemImage="{DynamicResource dk_gun}" Grid.Row="0" Grid.Column="1" Panel.ZIndex="0" Tag="{x:Static local:ItemName.COCONUT_GUN}"/>
                <local:Item x:Name="dk_inst"  ItemImage="{DynamicResource dk_inst}" Grid.Row="0" Grid.Column="2" Panel.ZIndex="0" Tag="{x:Static local:ItemName.BONGO_BLAST}"/>
                <local:Item x:Name="dk_move"   ItemImage="{DynamicResource dk_move}" Grid.Row="0" Grid.Column="3" Panel.ZIndex="0" Tag="{x:Static local:ItemName.GORILLA_GRAB}"/>
