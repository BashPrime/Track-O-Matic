                            <local:RegionGrid Margin="5,0,5,0"  x:Name="Level3RegionGrid" Grid.Column="1" Tag="{x:Static local:RegionName.FRANTIC_FACTORY}"/>
                        </Grid>
                        <Grid Name="Level4" Grid.Row="4"  Margin="1" Background="{StaticResource RegionBG}">
