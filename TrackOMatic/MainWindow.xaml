                <Button Content="{DynamicResource donkey}"  Template="{StaticResource DefaultButton}" Grid.Row="0" Grid.Column="0" Opacity="0.25" Panel.ZIndex="-1" Tag="{x:Static local:ItemName.DONKEY}"/>
                <Button  Content="{DynamicResource dk_gun}"  Template="{StaticResource DefaultButton}" Grid.Row="0" Grid.Column="1" Opacity="0.25" Panel.ZIndex="-1" Tag="{x:Static local:ItemName.COCONUT_GUN}"/>
                <Button  Content="{DynamicResource dk_inst}"  Template="{StaticResource DefaultButton}" Grid.Row="0" Grid.Column="2" Opacity="0.25" Panel.ZIndex="-1" Tag="{x:Static local:ItemName.BONGO_BLAST}"/>
