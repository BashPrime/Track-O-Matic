<Window x:Class="TrackOMatic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:TrackOMatic.Properties"
        xmlns:local="clr-namespace:TrackOMatic"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Closing="MainWindow_Closing"
        LocationChanged="Window_LocationChanged"
        MouseDown="rootGrid_LostFocus" 
        SizeChanged="Window_SizeChanged"
        AllowDrop="True" Drop="DropFile"
        Title="Track-O-Matic" Height="1020" Width="570" Background="{StaticResource RegionBG}"
        MinHeight="575" MinWidth="400">


    <Window.Resources>
        <Style TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="White">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="File" Focusable="False">
                <MenuItem Header="Open Spoiler Log" Click="OpenSpoiler"/>
                <MenuItem Header="Reset Size" Click="ResetSize"/>
                <MenuItem Header="Reset Tracker" Click="OnReset"/>
            </MenuItem>
            <MenuItem Header="Toggles" Focusable="False">
                <Separator/>
                <MenuItem Name="TopMostOption" Header="Always on Top" IsCheckable="True"  IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=TopMost}" Click="TopMostToggle"/>
                <MenuItem Name="AutotrackOption" Header="Autotracking" IsCheckable="True" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=Autotracking}" Click="AutotrackToggle"/>
            </MenuItem>
            <MenuItem Header="v0.1" IsHitTestVisible="False" Focusable="False" HorizontalAlignment="Right"/>
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height=".007*"/>
                <RowDefinition Height=".1*"/>
                <RowDefinition Height=".03*"/>
                <RowDefinition Height=".5*"/>
                <RowDefinition Height=".03*"/>
                <RowDefinition Height=".11*"/>
                <RowDefinition Height=".32*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Rectangle Fill="{StaticResource BaseBG}" />
            </Grid>
            <Grid Grid.Row="3">
                <Rectangle Fill="{StaticResource RegionImageBG}" Margin="10,6,10,6" />
            </Grid>
            <Grid Grid.Row="5">
                <Rectangle Fill="{StaticResource RegionImageBG}" Margin="10,6,10,6" />
            </Grid>
            <Grid Grid.Row="0"  Background="{StaticResource BaseBG}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Name="StartRegion" Grid.Row="0"  Margin="1" Background="{StaticResource RegionBG}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="3.3*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Background="{StaticResource RegionImageBG}" Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width=".1*"/>
                                    <ColumnDefinition Width=".3*"/>
                                </Grid.ColumnDefinitions>

                                <Image x:Name="StartPicture" Source="images\dk64\start.png" Grid.RowSpan="2" Grid.ColumnSpan="4" Margin="10" />
                            </Grid>
                            <local:RegionGrid  x:Name="StartRegionGrid" Margin="5,0,5,0" Grid.Column="1" Tag="{x:Static local:RegionName.START}"/>
                        </Grid>
                        <Grid Name="Level1" Grid.Row="1"  Margin="1" Background="{StaticResource RegionBG}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="3.3*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Background="{StaticResource RegionImageBG}">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width=".1*"/>
                                    <ColumnDefinition Width=".3*"/>
                                </Grid.ColumnDefinitions>


                                <Image x:Name="Level1Picture" Source="Images\dk64\jungle_japes.png" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="{StaticResource RegionPictureMargin}"/>
                                <local:LevelOrderNumber x:Name="Level1Order" Grid.RowSpan="4" Grid.ColumnSpan="5"/>
                                <TextBlock x:Name="Level1TopLabel" FontSize="{StaticResource BigFontSize}" Foreground="{StaticResource GBColor}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" FontFamily="{DynamicResource DK64Font}" Text="?" Grid.RowSpan="1" VerticalAlignment="Center"/>
                                <TextBlock x:Name="Level1Points" FontSize="{StaticResource BigFontSize}" Foreground="White" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" FontFamily="{DynamicResource DK64Font}" Text="?" VerticalAlignment="Center"/>
                            </Grid>
                            <local:RegionGrid Margin="5,0,5,0"  x:Name="Level1RegionGrid" Grid.Column="1" Tag="{x:Static local:RegionName.JUNGLE_JAPES}"/>
                        </Grid>
                        <Grid Name="Level2" Grid.Row="2" Margin="1" Background="{StaticResource RegionBG}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="3.3*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Background="{StaticResource RegionImageBG}">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width=".1*"/>
                                    <ColumnDefinition Width=".3*"/>
                                </Grid.ColumnDefinitions>

                                <Image x:Name="Level2Picture" Source="Images\dk64\angry_aztec.png" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="{StaticResource RegionPictureMargin}"/>
                                <local:LevelOrderNumber x:Name="Level2Order" Grid.RowSpan="4" Grid.ColumnSpan="5"/>
                                <TextBlock x:Name="Level2TopLabel" FontSize="{StaticResource BigFontSize}" Foreground="{StaticResource GBColor}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" FontFamily="{DynamicResource DK64Font}" Text="?" Grid.RowSpan="1" VerticalAlignment="Center"/>
                                <TextBlock x:Name="Level2Points" FontSize="{StaticResource BigFontSize}" Foreground="White" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" FontFamily="{DynamicResource DK64Font}" Text="?" VerticalAlignment="Center"/>
                            </Grid>
                            <local:RegionGrid Margin="5,0,5,0"  x:Name="Level2RegionGrid" Grid.Column="1" Tag="{x:Static local:RegionName.ANGRY_AZTEC}"/>
                        </Grid>
                        <Grid Name="Level3" Grid.Row="3"  Margin="1" Background="{StaticResource RegionBG}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="3.3*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Background="{StaticResource RegionImageBG}">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45*"/>
                                    <ColumnDefinition Width="13*"/>
                                    <ColumnDefinition Width="26*"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="3.872"/>
                                </Grid.ColumnDefinitions>

                                <Image x:Name="Level3Picture" Source="Images\dk64\frantic_factory.png" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="{StaticResource RegionPictureMargin}"/>
                                <local:LevelOrderNumber x:Name="Level3Order" Grid.RowSpan="4" Grid.ColumnSpan="5"/>
                                <TextBlock x:Name="Level3TopLabel" FontSize="{StaticResource BigFontSize}" Foreground="{StaticResource GBColor}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" FontFamily="{DynamicResource DK64Font}" Text="?" Grid.RowSpan="1" VerticalAlignment="Center"/>
                                <TextBlock x:Name="Level3Points" FontSize="{StaticResource BigFontSize}" Foreground="White" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" FontFamily="{DynamicResource DK64Font}" Text="?" VerticalAlignment="Center"/>
