<ContentControl x:Class="TrackOMatic.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrackOMatic"
             mc:Ignorable="d" Background="Transparent" PreviewGiveFeedback="Item_PreviewGiveFeedback" MouseMove="Item_MouseMove"
             MouseDown="Item_MouseDown"
             MouseWheel="Item_MouseWheel">

    <ContentControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentControl.Resources>
    
    <ContentControl.Content>
        <Grid>
            <ContentPresenter x:Name ="ImageItem" Content="{Binding ItemImage}"/>
            <ContentPresenter x:Name="Star" Content="{StaticResource star_complex}" Visibility="Hidden" HorizontalAlignment="Left"/>
        </Grid>
    </ContentControl.Content>

</ContentControl>