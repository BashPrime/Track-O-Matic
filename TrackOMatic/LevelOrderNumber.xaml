<UserControl x:Class="TrackOMatic.LevelOrderNumber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MouseLeftButtonDown="LevelOrder_LeftPress" MouseRightButtonDown="LevelOrder_RightPress" MouseWheel="LevelOrder_MouseWheel">
    <Grid Background="Transparent">
        <Grid Background="Transparent" Margin="0,0,0,0" Width="26" Height="26" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border Background="{StaticResource BaseBG}" CornerRadius="3" Margin="0">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-3,-3,-3,-1" x:Name="NumberLabel" Panel.ZIndex="2" FontSize="{StaticResource BigFontSize}"   Foreground="White"  FontFamily="{DynamicResource DK64Font}" Text="?"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
